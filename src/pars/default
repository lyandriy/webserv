
server {
    listen 8081;
    server_name myserver.net;
    accept_method GET;

    error_page 403 /403.html;
    client_max_body_size 5k;
    redirection /start.html;
    root /srv/www;
    autoindex on;
    index index.htm;
    cgi off;

    location /api {
        root /srv/www/api;
        index api_index.html;
        client_max_body_size 6k;
        autoindex on;
        cgi off;}location /static {
        root /srv/www/static;
        index static_index.html;
        client_max_body_size 7M;
        autoindex off;
        cgi on;
    }
}