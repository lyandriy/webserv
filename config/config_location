server
{
    listen 8081;
    server_name localhost;
    root html/files;
    index index.html;
    accept_method GET POST DELETE;
    error_page 404 error/404.html;
    client_max_body_size 5G;
    autoindex on;
    cgi on;
    location /loc
    {
        index index.html;
        client_max_body_size 2M;
        autoindex on;
        cgi on;
        accept_method GET;
        redirection /new_loc;
    }
}