server
{
    listen 8081;
    server_name localhost;
    root html/files;
    index index.html;
    accept_method GET POST DELETE;
    redirection html/files;
    error_page 404 html/files/index.html;
    client_max_body_size 1M;
    autoindex on;
    cgi on;
    location /hola
    {
        error_page 404 pruebacgi.c;
        index hola1;
        client_max_body_size 2M;
        root html;
        autoindex off;
        cgi on;
        redirection /test/redirect/prueba.html;
        accept_method GET;
    }
}
