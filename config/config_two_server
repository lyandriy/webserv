server
{
    listen 8081;
    server_name localhost;
    root html/files;
    index index.html;
    accept_method GET POST DELETE;
    redirection html/redir;
    error_page 404 html/file/index.html;
    client_max_body_size 1M;
    autoindex on;
    cgi on;
}

server
{
    listen 8080;
    server_name localhost_two;
    root html/files;
    index index.html;
    accept_method GET;
}