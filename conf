server
{
    listen 8081;
    server_name localhost;
    root html/test;
    index index.html;
    accept_method GET POST DELETE;
    redirection prueba.html;
    error_page 404 index.html;
    client_max_body_size 1M;
    autoindex on;
    cgi on;
    location /hola
    {
        error_page 404 pruebacgi.c;
        index hola1;
        client_max_body_size 2M;
        root html/test/hola;
        autoindex off;
        cgi on;
        redirection hola2;
        accept_method GET;
    }
}
