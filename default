server {
        listen 8080;
        root /var/www/html;
        server_name example.com;

        index index.hpp;
        error_page 404 404;
        location / {
            error_page 404 /hola;
            try_files $uri $uri/ =404;
        }

        location = /404.html {
            root /var/www/html;
            internal;
        }
}
